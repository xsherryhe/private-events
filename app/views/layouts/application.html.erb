<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="flash">
      <% flash.each do |name, message| %>
        <p class="<%= name %>"><%= message %></p>
      <% end %>
    </div>

    <% unless devise_controller? %>
      <div class="user-info">
        <% if user_signed_in? %>
          <div>Currently signed in as: <%= current_user.username %></div>
          <div class="user-links">
            <div><%= link_to 'Edit Account', edit_user_registration_path %></div>
            <div><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete } %></div>
          </div>
        <% else %>
          <div>Want to host and attend events? <%= link_to 'Sign Up', new_user_registration_path %></div>
          <div>Already have an account? <%= link_to 'Sign In', new_user_session_path %></div>
        <% end %>
      </div>
    <% end %>

    <div class="navigation">
      <%= link_to 'Home', '/' %>
      <%= link_to 'New Event', new_event_path %>
    </div>

    <%= yield %>
  </body>
</html>
